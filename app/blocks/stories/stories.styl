.stories
	&__content
		position relative
		height w(4500)
		display flex
		flex-flow column nowrap
		align-items center
		+below(768px)
			height wm(4500)

	&__title
		margin-bottom w(20)
		font-family $Alienscows
		font-size w(115)
		color #ffffff
		+below(768px)
			margin-bottom wm(15)
			font-size wm(55)

	&__text
		width w(550)
		font-family $HelveticaNeueCyrR
		font-size w(25)
		line-height w(32)
		text-align center
		+below(768px)
			width wm(280)
			font-size wm(18)
			line-height wm(22)

	&__decoration
		position absolute
		width w(560)
		height w(520)
		top w(130)
		left w(160)
		z-index -1
		+below(768px)
			width wm(205)
			height wm(190)
			top wm(130)
			left wm(290)
			z-index 5

	&__image
		width 100%

	&__wrap
